extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let cityid = toShow._id
    - let city_name = toShow.name
    - let citycountry = toShow.country
    - let citypopulation = toShow.population
    - let actionid = "/resource/city/" + cityid
    script.
      let actionid = "#{actionid}"
    div
      div.row
        div(class='cityAttr mr-3') city ID is:
        div #{cityid}
      div.row
        div(class='cityAttr mr-3') city name is:
        div #{city_name}
      div.row
        div(class='cityAttr mr-3') city population is:
        div #{citypopulation}
      div.row
        div(class='cityAttr mr-3') city country is:
        div #{citycountry}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
    script.
      function cancel() {
        // Go back to the home page for the city collection
        window.location.href='/city'
      }
    script.
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/city'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error )
        });
      }
